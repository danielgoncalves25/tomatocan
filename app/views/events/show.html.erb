<% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %>">
      <%= value %>
    </div>
  <% end %>
  
  <!-- Meta Tags for Facebook -->
  <% content_for :head do %>
    <meta property="og:url"           content="<%= "https://www.thinq.tv" + event_path(@event) %>" />
    <meta property="og:type"          content="website" />
    <meta property="og:title"         content="<%= @event.name %>" />
    <meta property="og:description"   content="<%= @event.desc %>" />
    <meta property="og:image"         content="<%= @user.profilepic.url.to_s %>" />
  <% end %>
  
  <div class="container">

    <!-- TOP HALF -->
    <div class="row">
      <!-- CONVERSATION NAME & HOST -->
      <div class="col-lg-12" style="text-align: center;">
        <h1> Come Join the CONVERSATION </h1>
          <h3>
            <strong>
              <%= @event.name %>
            </strong>
          </h3 style="margin-bottom: 0px !important;">
          <h3>
            <small>
              Hosted by <%= link_to @user.name, user_profile_path(@user.permalink) %>
            </small>
          </h3 style="margin-bottom: 0px !important;">
      </div>
    </div>

    <!-- MIDDLE -->
    <div class="row" style="background-color: #8C1D40;"> 
      <!-- PROFILE IMAGE -->
      <% if @user.profilepic.present? && @user.profilepic != '' %>
        <div class="col-md-4" style="display: flex; align-content: center; justify-content: center;">
          <%= image_tag @user.profilepic.url.to_s, height: "225", width: "225"%>
        </div>
      <% end %>

      <div class="row" style="color:#fff;" >
          <!-- CONVERSATION STARTTIME -->
          <div class="col-md-4">
            <div style = "margin-left: 5px">
              <% edt = @event.start_at + 3.hours %>
              <%= @event.start_at.strftime("%A, %B %d") %> <br>
              <%= @event.start_at.strftime("%I:%M %p")%> PDT / <%= edt.strftime("%I:%M %p") %> EDT
              <br> <%= @duration %> minutes <br>
            </div>
          </div>

          <div class="col-md-4">
            <% if @event.desc.present? %>
               <b> <%= @event.desc.gsub(/\n/, '<br>').html_safe %> </b> <br>
            <% end %>
          </div>

         
          <div class="col-md-4">
            <div style = "margin-left: 5px">
              <% edt = @event.start_at + 3.hours %>
              <%= @event.start_at.strftime("%A, %B %d") %> <br>
              <%= @event.start_at.strftime("%I:%M %p")%> PDT / <%= edt.strftime("%I:%M %p") %> EDT
              <br> <%= @duration %> minutes <br>
            </div>
          </div>
        
          <div class="col-md-4">
            <% if @event.desc.present? %>
               <b> <%= @event.desc.gsub(/\n/, '<br>').html_safe %> </b> <br>
            <% end %>
          </div>
      </div>
    </div>





    <!-- BOTTOM HALF -->
    <div class="row" style="padding: 20px 0px !important;">
      <! Left Column -->
      <div class="col-md-8">
        <div style="margin-left: -15px;"> To Join the CONVERSATION: </div>
        <! Left Column -->
        <div class="col-md-12">
          <div> <strong>Desktop:</strong> </div>
          <div> 
            Go to <%= link_to "ThinQ.tv", root_path %> and 
            click <%= link_to " Join Conversation", user_viewer_path(@user.permalink, chatrm: "Activism Hall" ), :class => "btn btn-sm btn-default fa fa-video-camera", :style => "border-color: FFB704 !important ;"%>
          </div>
          <div> <strong>Mobile: </strong> </div>
          <div> Download the JITSI meet app and join the CONVERSATION chatroom</div>
        </div>
      </div>
       <! Right Column -->
        <div class="col-md-4">
          <div style="text-align: center;"> 
            <strong> Invite your fellow activists </strong>
          </div>
          <div class="row" style="display: flex; align-content: center; justify-content: center;">
            <div class="col-md-2">
              <%= link_to root_path, target: :_blank do %>
                <%= image_tag "email_icon.png", height: "25", width: "25"%>
              <% end %>
            </div>
            <div class="col-md-2">
             <%= link_to "www.twitter.com", target: :_blank do %>
                <%= image_tag "linkedin_icon.png", height: "25", width: "25"%>
              <% end %>
            </div>
            <div class="col-md-2">
              <%= link_to root_path, target: :_blank do %>
                <%= image_tag "twitter_icon.png", height: "25", width: "25"%>
              <% end %>
            </div>
            <div class="col-md-2">
              <%= link_to "www.facebook.com", target: :_blank do %>
                <%= image_tag "facebook_icon.png", height: "25", width: "25"%>
              <% end %>
            
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
